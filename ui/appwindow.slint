import { Button, VerticalBox, LineEdit } from "std-widgets.slint";

export component AppWindow inherits Window {
    in property <string> results: "";
    callback divide-income(string);

    background: #2d2929;
    GridLayout {
        padding: 50px;
        spacing: 25px;
        Row {
            Text {
                text: "Income Divider";
                horizontal-alignment: center;
                font-size: 24px;
                font-weight: 900;
            }
        }
        Row {
            income := LineEdit {
                horizontal-alignment: center;
                font-size: 14px;
                placeholder-text: "Enter the Income";
                height: 35px;
            }

        }
        Row {
            Button {
                text: "Calculate";
                primary: true;
                height: 35px;
                clicked => {divide-income(income.text)}
            }

        }
        Row {
            VerticalBox {
                Rectangle {
                    height: 100px;
                    background: #f2f2f2;
                    Text {
                        color: black;
                        font-size: 16px;
                        font-weight: 500;
                        text: root.results;
                    }
                }
            }
        }
    }
}
